<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    android:orientation="vertical"
    tools:context=".aboutScreen">

    <Button
        android:id="@+id/turnBack"
        android:layout_width="141dp"
        android:layout_height="31dp"
        android:layout_marginBottom="28dp"
        android:background="@color/colorGreen"
        android:onClick="turnBack"
        android:text="RETURN"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/aboutText"
        android:layout_width="365dp"
        android:layout_height="105dp"
        android:gravity="center_horizontal"
        android:text="This game was made by WarpFlare. All you have to do is catch Crash before time runs out."
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/turnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="274dp"
        android:layout_height="194dp"
        app:layout_constraintBottom_toTopOf="@+id/gitHubButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913"
        app:srcCompat="@drawable/warpflare" />

    <Button
        android:id="@+id/gitHubButton2"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginBottom="108dp"
        android:background="@color/colorGitHubButton"
        android:onClick="openGitHub"
        android:text="VISIT GITHUB"
        android:textColor="@android:color/background_light"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/aboutText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>